{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* ===================================== */
    /* SERVER BASE - BUN RUNTIME 2025       */
    /* Extends monorepo base config         */
    /* ===================================== */

    /* Bun Environment */
    "types": ["bun-types"],
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/routes/*": ["src/routes/*"],
      "@/services/*": ["src/services/*"],
      "@/middleware/*": ["src/middleware/*"],
      "@/types/*": ["src/types/*"],
      "@/config/*": ["src/config/*"],
      "@/utils/*": ["src/utils/*"]
    }
  }
}
