{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* ===================================== */
    /* SERVER - DEV & TYPECHECK CONFIG      */
    /* No emit for development              */
    /* ===================================== */
    "noEmit": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "scripts/**/*.ts",
    "drizzle.config.*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "tests/**/*",
    "patches/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/scripts/archive/**/*"
  ]
}
