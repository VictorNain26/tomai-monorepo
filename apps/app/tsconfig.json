{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* ============================= */
    /* TOM CLIENT - REACT + VITE    */
    /* Extends monorepo base config */
    /* ============================= */

    /* Browser Environment */
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    /* React Configuration */
    "jsx": "react-jsx",

    /* Types - Vite + Bun (for Eden Treaty) */
    "types": ["vite/client", "node", "@types/bun"],

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/utils/*": ["src/utils/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/types/*": ["src/types/*"],
      "@/store/*": ["src/store/*"],
      "@/pages/*": ["src/pages/*"],
      "@/constants/*": ["src/constants/*"],
      "@/assets/*": ["src/assets/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}
