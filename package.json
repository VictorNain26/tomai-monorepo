{
  "name": "tom-monorepo",
  "private": true,
  "description": "Tom - Plateforme de tutorat socratique adaptatif (Landing + App mÃ©tier)",
  "scripts": {
    "dev": "turbo run dev",
    "dev:landing": "turbo run dev --filter=landing",
    "dev:app": "turbo run dev --filter=tom-client",
    "build": "turbo run build",
    "build:landing": "turbo run build --filter=landing",
    "build:app": "turbo run build --filter=tom-client",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "validate": "pnpm run typecheck && pnpm run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=18"
  }
}
